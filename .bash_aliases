alias gpr='git pull --rebase && ctags -R --languages=ruby'
alias grep='grep --color'
alias grh='git reset --hard'
alias gst='git status'
alias sc='rails console'
alias ss='rails server'
alias rc='rails c'
alias st='git status'
alias vundle='vim +PluginInstall +qall'

